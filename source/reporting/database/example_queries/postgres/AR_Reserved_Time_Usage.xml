<Query type="advanced" name="Advance Reservation Time Usage" category="Advance Reservation">
    <description>Shows the time usage of the AR. Contains these fields: 
                 - job_duration (the total time of jobs that ran in an AR) NULL value
                   means no jobs ran in this reservation 
                 - ar_duration (the total time that was reserved for AR)
                 - unused_reserved_time (the total reserved time of an AR that was not used)
                   NULL value means the whole reservation was unused
   </description>
    <view>
        <description visible="true"/>
        <parameter/>
        <sql visible="true"/>
    </view>
    <sql>SELECT ar_number, job_duration, ar_duration, 
                age(('1970-01-01'::date + ar_duration::interval)::timestamp, 
                    ('1970-01-01'::date + job_duration::interval)::timestamp) AS unused_time
         FROM view_ar_time_usage WHERE ar_number IN (SELECT ARL.ar_number 
            FROM view_ar_log ARL WHERE event IN ('TERMINATED', 'DELETED'))</sql>
</Query>
