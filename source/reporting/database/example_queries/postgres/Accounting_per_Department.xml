<Query tableName="" category="Accounting" name="Accounting per Department" type="advanced">
    <view>
        <description visible="false"/>
        <parameter visible="true"/>
        <sql visible="true"/>
        <pivot order="0">
            <row> department</row>
            <column>time</column>
            <data>cpu</data>
            <data>mem</data>
            <data>io</data>
        </pivot>
    </view>
    <field dbName="time" function="VALUE" reportName="time"/>
    <field dbName="department" function="VALUE" reportName=" department"/>
    <field dbName="cpu" function="VALUE" reportName="cpu"/>
    <field dbName="mem" function="VALUE" reportName="mem"/>
    <field dbName="io" function="VALUE" reportName="io"/>
    <sql>SELECT time, department, cpu, mem, io FROM 
	     (SELECT date_trunc('month', start_time)::date AS time, 
		         department, 
				 SUM(cpu) AS cpu, 
				 SUM(mem) AS mem, 
				 SUM(io)  AS io 
		  FROM view_accounting 
		  WHERE start_time &gt; (current_timestamp - interval '1 year') 
		  GROUP BY time, department) 
		 AS tmp;
    </sql>
</Query>

