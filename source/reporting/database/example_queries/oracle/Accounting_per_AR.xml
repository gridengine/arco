<Query tableName="" category="Accounting" name="Accounting per AR" type="advanced">
   <description>Shows the monthly accounting per Advance Reservation for the interval of one year.</description>      
    <view>
        <description visible="true"/>
        <parameter/>
        <sql visible="true"/>
        <pivot order="0">
            <row>ar_number</row>
            <column>time</column>
            <data>cpu</data>
            <data>mem</data>
            <data>io</data>
        </pivot>
    </view>
    <sql>SELECT trunc(start_time, 'month') AS time, 
                ar_number,
                sum(cpu) as cpu, 
                sum(mem) as mem, 
                sum(io) as io
         FROM view_accounting 
         WHERE start_time &gt; (SYSDATE - INTERVAL '1' YEAR)
         AND ar_number > 0 
         GROUP BY trunc(start_time, 'month'), ar_number</sql>
</Query>

