<Query tableName="table" category="Accounting" name="Accounting per Department" type="advanced">
<description>Shows the monthly accounting per department for the interval of one year.</description>      
    <view>
        <description visible="true"/>
        <parameter/>
        <sql visible="true"/>
        <pivot order="0">
            <row>department</row>
            <column>time</column>
            <data>cpu</data>
            <data>mem</data>
            <data>io</data>
        </pivot>
    </view>
    <sql>SELECT date_format(start_time, '%Y-%m-01') AS time, 
		      department, 
		      SUM(cpu) AS cpu, 
		      SUM(mem) AS mem, 
		      SUM(io)  AS io 
	       FROM view_accounting 
	       WHERE start_time &gt; (current_timestamp - interval 1 year) 
	       GROUP BY date_format(start_time, '%Y-%m-01'), department</sql>
</Query>

