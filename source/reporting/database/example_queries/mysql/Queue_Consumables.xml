<Query tableName="view_queue_values" limit="0" category="Resource Usage" name="Queue Consumables" type="advanced">
   <description>Shows the number of used and available slots for all queues for the interval of one day.</description>   
    <view>
        <description visible="true"/>
        <parameter/>
        <sql visible="true"/>
        <graphic order="2" legendVisible="true">
            <bar>
                <xaxis>time_start</xaxis>
                <xaxis>qname</xaxis>
                <yaxis>available</yaxis>
            </bar>
        </graphic>
        <table order="0">
            <column>qname</column>
            <column>hostname</column>
            <column>time_start</column>
            <column>used</column>
            <column>available</column>
        </table>
    </view>
    <sql>SELECT z.qname AS "qname", z.hostname AS "hostname",
                z.time_start AS "time_start", sum(z.used) as "used",
                sum(z.available) as "available" 
         FROM (
            SELECT max(num_value) as "used",
                   max(num_config) AS "available",
                   qname AS "qname",
                   hostname AS "hostname",
                   time_start AS "time_start"
            FROM view_queue_values
            WHERE variable = 'slots'
            AND time_start &gt; (current_timestamp - interval 1 day)
            GROUP BY hostname, qname, time_start  
         ) z
         GROUP BY z.qname, z.hostname, z.time_start
         ORDER BY z.time_start</sql>
</Query>

