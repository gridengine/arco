<Query tableName="" category="Accounting" name="Accounting per Project" type="advanced">
    <view>
        <description visible="true"/>
        <parameter visible="true"/>
        <sql visible="true"/>
        <pivot order="0">
            <row> project</row>
            <column>time</column>
            <data> cpu</data>
        </pivot>
    </view>
    <field dbName="time" function="VALUE" reportName="time"/>
    <field dbName=" project" function="VALUE" reportName=" project"/>
    <field dbName=" cpu" function="VALUE" reportName=" cpu"/>
    <field dbName=" mem" function="VALUE" reportName=" mem"/>
    <field dbName=" io" function="VALUE" reportName=" io"/>
    <sql>SELECT time, project, cpu, mem, io 
	    FROM (SELECT date_format(start_time, '%Y-%m-01') AS time,  
		      		 project, 
					 SUM(cpu) AS cpu, 
					 SUM(mem) AS mem, 
					 SUM(io)  AS io 
			  FROM view_accounting 
			  WHERE start_time &gt; (current_timestamp - interval 1 year) 
			  GROUP BY time, project) AS tmp;
    </sql>
</Query>

