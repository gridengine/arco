<!ELEMENT configuration (databases,storage,debug?)>
  <!ELEMENT databases (database)+>
    <!ELEMENT database (driver,users)>
        <!ATTLIST database datatype (production|project) #REQUIRED >
        <!ATTLIST database name CDATA #REQUIRED >
        <!ATTLIST database host CDATA #REQUIRED >
        <!ATTLIST database port CDATA #REQUIRED >
      <!ELEMENT name (#PCDATA)>
      <!ELEMENT driver (class)>
          <!ATTLIST driver type CDATA #REQUIRED >
        <!ELEMENT class (#PCDATA)>
      <!ELEMENT users (user)*>
        <!ELEMENT user (passwd?,connections?,appuserlist?)>
            <!ATTLIST user name CDATA #REQUIRED >
          <!ELEMENT passwd (#PCDATA)>
          <!ELEMENT connections EMPTY>
            <!ATTLIST connections max CDATA #REQUIRED >
          <!ELEMENT appuserlist (user*)>
  <!ELEMENT storage (path)>
    <!ELEMENT path (common,queries,results,viewconfiguration) >
      <!ELEMENT common (#PCDATA) >
      <!ELEMENT queries (#PCDATA) >
      <!ELEMENT viewconfiguration (#PCDATA) >
      <!ELEMENT results (#PCDATA) >
  <!ELEMENT debug (logging)>
    <!ELEMENT logging (log)*>
    <!ELEMENT log (class)*>
      <!ATTLIST log level (0|1|2|3|4|5) #REQUIRED >
