<!--
NOTE:
=====
Only the database administrator should have rights on this file. Even though the
password of the users have been encrypted by a special tool nobody, except the 
databaseadministrator, should be able to read this information
-->

<!--
NOTE:
=====
The supported types of database are named:
 - Postgres
 - MySQL
 - Oracle9i
-->

<configuration>
  <!--
    Configure the database connection to be used by the application
  -->
  <database name="DBNAME" host="DBHOST" port="DBPORT" schema="DBSCHEMA">
     <driver type="DBTYPE">
        <javaClass>DBDRIVER</javaClass>
     </driver>
     <user name="DBUSER" passwd="DBPWD" maxConnections="10"/>
  </database>
  ARCO_WRITE_USERS
  <storage>
    <root>COMMON_PATH</root>
    <queries>queries</queries>
    <results>results</results>
  </storage>
</configuration>

