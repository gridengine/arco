<!DOCTYPE propertysheet SYSTEM "com_sun_web_ui/dtd/propertysheet.dtd">

<propertysheet>
    <section name="simple" defaultValue="query.common.simpleSection">
       <property>
           <label name="tableLabel" defaultValue="query.common.simple.table"/>
                 <cc name="orgTableValue" tagclass="com.sun.web.ui.taglib.html.CCHiddenTag"/>
                 <cc name="tableValue" tagclass="com.sun.web.ui.taglib.html.CCDropDownMenuTag" >
                   <!--<attribute name="type" value="standard"/> -->
                   <attribute name="dynamic" value="true"/>
                   <attribute name="onChange" value="javascript:changeTableConfirm();"/>
                 </cc>
       </property>    
       <property span="true">
         <cc name="fieldValue" tagclass="com.sun.web.ui.taglib.table.CCActionTableTag" >
            <attribute name="maxRows" value="10" />
            <attribute name="title" value="query.common.simple.fields" />
            <attribute name="page" value="1" />
            <attribute name="showPaginationControls" value="true" />
            <attribute name="showSelectionSortIcon" value="false"/>
            <attribute name="showAdvancedSortIcon" value="false"/>
            <attribute name="selectionType" value="multiple"/>
            <attribute name="selectionJavascript" value="setTimeout('toggleFieldButtons()', 0)"/>
         </cc>
       </property>    
       <property span="true">
         <cc name="filterValue" tagclass="com.sun.web.ui.taglib.table.CCActionTableTag" >
            <attribute name="maxRows" value="10" />
            <attribute name="title" value="query.common.simple.filters" />
            <attribute name="page" value="1" />
            <attribute name="showPaginationControls" value="true" />
            <attribute name="showSelectionSortIcon" value="false"/>
            <attribute name="showAdvancedSortIcon" value="false"/>
            <attribute name="selectionType" value="multiple"/>
            <attribute name="selectionJavascript" value="setTimeout('toggleFilterButtons()', 0)"/>
         </cc>
       </property>
       <property>
          <label name="limitLabel" defaultValue="query.common.simple.limit"/>
         <cc name="limitValue" tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag">
            <attribute name="onKeyUp" value="javascript:setDirty()"/>
            <attribute name="dynamic" value="true"/>
         </cc>       
       </property> 
    </section>
    
</propertysheet>
